---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Data
const data = [
  {
    period: "2023",
    title: "Juno College Web Development Scholarship",
    description: `Snagged a partial scholarship from Juno College during my JavaScript course. I guess my layouts were clicking with the instructorsâ€”responsive design and good UX aren't just buzzwords after all.`,
  },
  {
    period: "2023",
    title: "Adobe Creative Suite Certified",
    description: `Got properly certified in Adobe's Creative Suite. Spent way too many late nights learning Photoshop, Illustrator, and the rest.`,
  },
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200 dark:border-base-700"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text
          tag="h2"
          variant="textSM"
          class="text-base-900 dark:text-base-100 font-bold uppercase"
        >
          Awards & Recognition
        </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          data.map((award, index) => (
            <article class="group relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start ">
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="text-base-900 dark:text-base-100 font-bold uppercase"
                >
                  {award.title}
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class="mt-1 text-base-600 dark:text-base-400"
                >
                  {award.description}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="text-base-600 dark:text-base-400 lg:ml-auto"
              >
                <time datetime={award.period}> {award.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
