---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Data
const data = [
  {
    period: "2024â€“2025",
    title: "Digital Media & Information Technology Diploma",
    description: `Currently completing NAIT's Digital Media & Information Technology diploma. Focusing on modern web development, design principles, and digital media production.`,
    location: "Northern Alberta Institute of Technology (NAIT), Edmonton, Alberta",
  },
  {
    period: "2023",
    title: "JavaScript & jQuery Course",
    description: `Completed Juno College's JavaScript & jQuery course covering control flow, functions, data structures, DOM manipulation, browser events, asynchronous JavaScript, and REST APIs.`,
    location: "Juno College of Technology, Toronto, Ontario",
  },
  {
    period: "2021",
    title: "Introduction to Web Development",
    description: `Completed Juno College's comprehensive web development course covering HTML5, CSS3, responsive design, Flexbox, SCSS, and introduction to JavaScript & jQuery.`,
    location: "Juno College of Technology, Toronto, Ontario",
  },

];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200 dark:border-base-700"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text
          tag="h2"
          variant="textSM"
          class="text-base-900 dark:text-base-100 font-bold uppercase"
        >
          Education
        </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          data.map((data, index) => (
            <article class="group relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start ">
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="text-base-900 dark:text-base-100 font-bold uppercase"
                >
                  {data.title}
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class="mt-1 text-base-600 dark:text-base-400"
                >
                  {data.description}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="text-base-600 dark:text-base-400 lg:ml-auto"
              >
                <time datetime={data.period}> {data.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
