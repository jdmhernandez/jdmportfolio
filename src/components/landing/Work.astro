---
// assets
import { Image } from "astro:assets";
import capstone from "@/images/work/lpp-logo-capstone.jpg"; // Capstone project image
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const data = [
  {
    image: capstone,
    period: "2025",
    title: "Capstone Project",
    description: `My capstone project for NAIT Digital Media & Information Technology diploma. A comprehensive web application showcasing modern web development skills with a mix of coding, WordPress and design principles.`,
    link: "https://lollipopspartypackages.ca/",
  },
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-y-12 lg:gap-y-24 md:grid-cols-3 border-b py-8 border-base-200 dark:border-base-700"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text
          tag="h2"
          variant="textSM"
          class="text-base-900 dark:text-base-100 font-bold uppercase"
        >
          Work
        </Text>
      </div>
      <div
        class="lg:col-span-2 grid grid-cols-1 gap-y-12 gap-x-8"
      >
        {
          data.map((work) => (
            <article class=" relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start lg:sticky ">
              <Image
                width={800}
                height={600}
                src={work.image}
                alt={work.title}
                class="lg:col-span-full aspect-12/7 object-cover object-top w-full"
              />
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="text-base-900 dark:text-base-100 font-bold uppercase "
                >
                  <a href={work.link} target="_blank" rel="noopener noreferrer">
                    <>
                      <span class="absolute -inset-x-4 -inset-y-6 z-20 sm:-inset-x-6 sm:rounded-2xl" />
                      <span class="relative z-10"> {work.title}</span>
                    </>
                  </a>
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class="relative z-10 mt-1 text-base-600 dark:text-base-400"
                >
                  {work.description}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="relative z-10 flex items-center text-sm text-base-600 dark:text-base-400 lg:ml-auto"
              >
                <time datetime={work.period}> {work.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
